# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/itasks?schema=public"

# Authentication Secrets
# Generate a strong random secret (minimum 32 characters)
# You can generate one using: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-minimum-32-characters-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Encryption Key
# Required for LDAP and SMTP password encryption
# Must be at least 32 characters for AES-256 security
# Generate using: openssl rand -base64 32
ENCRYPTION_KEY="your-32-character-encryption-key-change-this-in-production"

# Development Optimizations (Optional)
# Disable Fast Refresh to prevent recompilation on every change
# FAST_REFRESH=false

# Reduce webpack stats output
# NEXT_WEBPACK_STATS=false

# Note: SMTP configuration is now managed through the Admin page's System Configuration section
# The application will use database-stored SMTP settings, with environment variables as fallback

